{% extends 'layout.html.twig' %}

    {% block contenido -%}
        {% embed '::portlet.html.twig' with {'titulo': 'Ver Trabajador: ' ~ entity} %}
            {% block in_header %}
                <div class='pull-right'>
                    <div class="row">
                        <div class="col-md-1 ">
                            <div class="pull-right">
                                {{ form(delete_form) }}
                            </div>
                        </div>
                        <a href="{{ path('app_trabajador_edit', { 'id': entity.id }) }}"
                           class="btn btn-sm btn-default">
                            Editar
                        </a>


                        <a href="{{ path('app_trabajador') }}" class="btn btn-sm btn-default">
                            Ir a la lista
                        </a>


                    </div>
                </div>
            {% endblock %}
            {% block cuerpo %}
                <p></p>

                <table class="table">
                    <tbody>
                    <tr>
                        <th class="show-header">Cuil</th>
                        <td>{{ entity.cuil }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Legajo</th>
                        <td>{{ entity.legajo }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Nombre</th>
                        <td>{{ entity.nombre }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Telefono</th>
                        <td>{{ entity.telefono }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Direccion</th>
                        <td>{{ entity.direccion }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Localidad</th>
                        <td>{{ entity.localidad }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Email</th>
                        <td>{{ entity.email }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Estado_civil</th>
                        <td>{{ entity.estadocivil }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Sexo</th>
                        <td>{{ entity.sexo }}</td>
                    </tr>
                    </tbody>
                </table>


            {% endblock %}
        {% endembed %}
    {% endblock contenido %}
