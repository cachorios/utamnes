{% extends ['::layout_backend.html.twig','layout.html.twig'] %}

    {% block contenido -%}
    {% embed '::portlet.html.twig' with {'titulo': 'Ver Vencimiento: ' ~ entity} %}
        {% block in_header %} 
        <div class='pull-right'>
        <div class="row">
                <div class="col-md-1 ">
        <div class="pull-right">
            {{ form(delete_form) }}
        </div>
    </div>
    <a href="{{ path('admin_vencimiento_edit', { 'id': entity.id }) }}"
       class="btn btn-sm btn-default">
        Editar
    </a>





<a href="{{ path('admin_vencimiento') }}" class="btn btn-sm btn-default">
    Ir a la lista
</a>


        </div>
    </div>
        {% endblock %}
            {% block cuerpo %} 
    <p></p>

    <table class="table">
        <tbody>
            <tr>
                <th class="show-header">Id</th>
                    <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th class="show-header">Anio</th>
                    <td>{{ entity.anio }}</td>
            </tr>
            <tr>
                <th class="show-header">Mes</th>
                    <td>{{ entity.mes }}</td>
            </tr>
            <tr>
                <th class="show-header">Vencimiento</th>
                    <td>{{ entity.vencimiento|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th class="show-header">Prorroga</th>
                    <td>{{ entity.prorroga|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>


    {% endblock %} 
    {% endembed %} 
    {% endblock contenido %}
