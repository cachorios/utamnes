{% extends '::layout_frontend.html.twig' %}

    {% block id 'Periodo' %}
        {% block contenido -%}
            {% embed '::portlet.html.twig' with {'titulo': 'Editar Periodo: ' ~ entity} %}
                {% block in_header %}
                    <div class='pull-right'>
                        <div class="row">

                            <div class="col-md-2 ">
                                <div class="pull-right">
                                    {{ form(delete_form) }}
                                </div>
                            </div>


                            <a href="{{ path('app_periodo') }}" class="btn btn-sm btn-default">
                                Ir a la lista
                            </a>


                        </div>
                    </div>
                {% endblock %}

                {% block cuerpo %}
                    {% for type, flashMessages in app.session.flashbag.all() %}
                        {% for flashMessage in flashMessages %}
                            <div class='alert alert-{{ type }}'>
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <p></p>

                    {#{{ form_start(edit_form) }}#}
                    {#{{ form_widget(edit_form) }}#}
                    {% include 'AppBundle:Periodo:_form.html.twig' with {'form': edit_form} %}

                    <div class="col-sm-offset-2 inner-actions">
                        <input type="submit" value="Guardar"
                               class="form-submit-button btn btn-sm btn-default btn-primary">
                        <a class="page-close-button btn btn-sm btn-default" href="{{ path('app_periodo') }}">Cerrar
                            <span class="glyphicon glyphicon-remove"></span></a>

                    </div>

                    {{ form_end(edit_form) }}

                {% endblock %}
            {% endembed %}


        {% endblock contenido %}
