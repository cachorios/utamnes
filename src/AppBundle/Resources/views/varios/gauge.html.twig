{% extends 'layout_frontend.html.twig' %}
{% block id 'gauge' %}

{% block contenido -%}
    {% embed '::portlet.html.twig' with {'titulo': 'Liquidar' } %}
        {% block cuerpo %}
            <h2>Periodo: {{ "" }}</h2>

            <p><br>
                Al finalizar la liquidacion...

                <br>
                <br>
            </p>
            <style>
                #progressbar {
                    background-color: #314657;
                    border-radius: 13px; /* (height of inner div) / 2 + padding */
                    padding: 3px;
                }

                #progressbar > div {
                    background-color: #d74b4b;
                    width: 0%; /* Adjust with JavaScript */
                    height: 30px;
                    border-radius: 10px;
                }

                #progress-value {
                    height: 30px;
                    text-align: center;
                    vertical-align: middle;
                    font-size: 25px;
                }
            </style>
            <div class="row">
                <div class="col-sm-11">
                    <div id="progressbar">
                        <div></div>
                    </div>
                </div>
                <div class="col_sm-1">
                    <span id="progress-value">0%</span>
                </div>
                <br><br><br>

            </div>
        {% endblock cuerpo %}
